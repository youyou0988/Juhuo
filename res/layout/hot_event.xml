<LinearLayout android:layout_width="match_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/title_bar"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <Button android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/all_event"
            android:textColor="#7B7574"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_event_filter">
        </Button>
        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/divider_event_filter"/>
        <Button android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/default_event"
            android:textColor="#7B7574"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_event_filter">
        </Button>
    </LinearLayout>
</LinearLayout>