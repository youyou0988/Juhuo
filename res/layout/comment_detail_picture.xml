<RelativeLayout android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:id="@+id/commentwhole"
    android:background="@color/white">
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/lay1">
        <TextView android:id="@+id/commenter_name"
            android:textColor="@color/mgreen"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/commenter_time"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"/>
        <TextView android:id="@+id/commenter_time"
            android:textColor="@color/mgray"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"/>
    </RelativeLayout>
    <ImageView android:layout_height="75px"
        android:layout_width="75px"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@drawable/default_image"
        android:id="@+id/comment_picture"
        android:layout_below="@+id/lay1"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>