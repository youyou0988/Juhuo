<RelativeLayout android:layout_width="wrap_content" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@color/divider">
    
    <include android:id="@+id/titlebar"
        layout="@layout/title_bar"
        android:layout_alignParentTop="true"/>
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/titlebar"
        android:background="@color/white">
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/receive_notice"
            android:textColor="@color/mgreen"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <CheckBox style="@style/MyCheckBox"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleX="0.70"
    		android:scaleY="0.70"
    		android:id="@+id/receive_notice_che"/>
        
    </RelativeLayout>
    <View android:id="@+id/transview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/blacktrans"
        android:visibility="invisible"/>
    
</RelativeLayout>